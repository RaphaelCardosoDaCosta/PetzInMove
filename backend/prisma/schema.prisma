generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Agendamento {
  id        String  @id @default(uuid())
  nome      String
  telefone  String
  servico   Servico @relation(fields: [idServico], references: [id], name: "agendamentos", onDelete: Cascade)
  data      String
  hora      String
  idServico Int
}

model Cadastro {
  id    String @id @default(uuid())
  nome  String
  email String @unique
  senha String @unique
}

model Servico {
  id           Int           @id @default(autoincrement())
  nome         String
  descricao    String
  preco        Float
  agendamentos Agendamento[] @relation("agendamentos")
}
