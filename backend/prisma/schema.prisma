generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Agendamento {
  id        String  @id @default(uuid())
  name      String
  phone     String
  service   Servico @relation(fields: [idService], references: [id], name: "agendamentos", onDelete: Cascade)
  date      String
  time      String
  idService Int
}

model Cadastro {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String @unique
}

model Servico {
  id           Int           @id @default(autoincrement())
  title        String
  description  String
  price        Float
  agendamentos Agendamento[] @relation("agendamentos")
}
